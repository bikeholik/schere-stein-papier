<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n%ex</pattern>
        </encoder>
    </appender>

    <logger name="com.github.bikeholik" level="DEBUG"/>

    <root level="INFO" >
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>